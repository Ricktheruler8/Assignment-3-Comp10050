#include<stdio.h>
#include<stdlib.h>
#include "crossops.h"

void slotAdj(struct slot ** board){

	for(size_t i = 1; i<6;i++){

		for(size_t j = 1; j<6; j++){

			board[i][j].adj = "four";
		}
	}

	for(size_t i = 1;i < 6;i++){

		board[0][i].adj = "DT";

		board[6][i].adj = 'UT';

		board[i][0].adj = "RT";

		board[i][6].adj = "LT";
	}

	board[0][0].adj = "two";
	board[0][6].adj = "two";
	board[6][0].adj = "two";
	board[6][6].adj = "two";

}
