#include<stdio.h>
#include<stdlib.h>
#include<string.h>
#include"crossops.h"

char UP = 'w', DOWN = 's', LEFT = 'a', RIGHT = 'd';

void movement(int move, int pnum, struct slot **board, struct Player *player){

	char walk = ' ';
	int row = player->pRow;
	int column = player->pCol;

	switch(move){

	case 1:


		printf("Press 'w' = up, 's' = down, 'a' = left, 'd' = right\n");
		walk = getchar();

		if(walk == UP){;

			player->pRow -= 1;
			strcpy(player->Current_Pos,board[row-1][column].Slot_Type);

			board[row][column].Slot_Tag -= 1;
			board[row][column].counter = 0;

			board[row-1][column].Slot_Tag += 1;
			board[row-1][column].counter = pnum;
		}
		else if(walk == DOWN){

			player->pRow += 1;
			strcpy(player->Current_Pos,board[row+1][column].Slot_Type);

			board[row][column].Slot_Tag -= 1;
			board[row][column].counter = 0;

			board[row+1][column].Slot_Tag += 1;
			board[row+1][column].counter = pnum;

		}
		else if(walk == LEFT){

			player->pCol -= 1;
			strcpy(player->Current_Pos,board[row][column-1].Slot_Type);

			board[row][column].Slot_Tag -= 1;
			board[row][column].counter = 0;

			board[row][column-1].Slot_Tag += 1;
			board[row][column-1].counter = pnum;

		}
		else if(walk == RIGHT){

			player->pCol += 1;
			strcpy(player->Current_Pos,board[row][column+1].Slot_Type);

			board[row][column].Slot_Tag -= 1;
			board[row][column].counter = 0;

			board[row][column+1].Slot_Tag += 1;
			board[row][column+1].counter = pnum;

		}
		break;

	case 2:

		printf("Press 'w' = up, 'a' = left, 'd' = right\n");
		walk = getchar();

		if(walk == UP){;

			player->pRow -= 1;
			strcpy(player->Current_Pos,board[row-1][column].Slot_Type);

			board[row][column].Slot_Tag -= 1;
			board[row][column].counter = 0;

			board[row-1][column].Slot_Tag += 1;
			board[row-1][column].counter = pnum;
		}
		else if(walk == LEFT){

			player->pCol -= 1;
			strcpy(player->Current_Pos,board[row][column-1].Slot_Type);

			board[row][column].Slot_Tag -= 1;
			board[row][column].counter = 0;

			board[row][column-1].Slot_Tag += 1;
			board[row][column-1].counter = pnum;

		}
		else if(walk == RIGHT){

			player->pCol += 1;
			strcpy(player->Current_Pos,board[row][column+1].Slot_Type);

			board[row][column].Slot_Tag -= 1;
			board[row][column].counter = 0;

			board[row][column+1].Slot_Tag += 1;
			board[row][column+1].counter = pnum;

		}
		break;

	case 3:

		printf("Press 'w' = up, 'a' = left, 'd' = right\n");
		walk = getchar();


	}
}
